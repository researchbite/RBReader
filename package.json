{
  "name": "research-bites-extension",
  "version": "1.0.0",
  "description": "Research Bites browser extension with Bionic Reading. Upcoming features include an AI auto highlighter and jargon free translator.",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "watch": "webpack --config webpack.config.js --watch",
    "clean": "rm -rf dist/* && rm -f research-bites-extension.zip",
    "package": "npm run clean && npm run build && cd dist && zip -r ../research-bites-extension.zip *",
    "build:prod": "NODE_ENV=production npm run package"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@mozilla/readability": "^0.4.4",
    "ai": "^4.3.16"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.242",
    "@types/mozilla-readability": "^0.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
